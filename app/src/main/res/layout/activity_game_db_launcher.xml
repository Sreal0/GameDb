<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">
    <android.support.v7.widget.Toolbar
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:category="@+category/toolbar_launcher"
        android:titleTextColor="@android:color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:category="@+category/txt_toolbar_Title"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/app_name"
            />
            <TextView
                android:category="@+category/txt_toolbar_undertitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:textSize="10sp"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:category="@+category/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+category/bottom_navigation"
        android:layout_below="@category/toolbar_launcher"
        android:animateLayoutChanges="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    </ScrollView>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:category="@+category/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/bottom_navigation_main" />



</RelativeLayout>

