<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator_layout_games_detail_fragment">

        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/coordinator_layout_game_detail_fragment"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toTopOf="@+id/txt_game_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_img_placeholder"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"/>

            <TextView
                android:id="@+id/txt_game_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Game @string/game_title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/game_title_big"
                android:gravity="center"
                android:layout_marginStart="8dp"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/txt_game_score"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="-1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/txt_game_score"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:text="100"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/game_score_big"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="258dp"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_game_score"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginBottom="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0"/>


            <TextView
                android:id="@+id/txt_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/game_summary"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/game_detail_fields"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_game_genre"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/txt_game_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_genre"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/game_detail_fields"
                tools:layout_constraintTop_creator="1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_game_publisher"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/txt_game_publisher"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/game_genre"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/game_detail_fields"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt3"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1"/>

            <TextView
                android:id="@+id/txt_developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/game_detail_fields"
                android:text="@string/game_developer"
                tools:layout_constraintTop_creator="1"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_game_score"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toRightOf="@+id/textView"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/txt_game_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/game_detail_fields"
                android:text="@string/game_publisher"
                tools:layout_constraintTop_creator="1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_developer"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/txt_developer"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/game_developer"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/game_detail_fields"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_developer"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/game_publisher"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/game_detail_fields"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_game_publisher"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"/>


        </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>